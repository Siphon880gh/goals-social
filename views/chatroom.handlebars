<style>
  .goal-planner-page .goal-planner-page {
    font-family: Arial Narrow, sans-serif;
    font-weight: 100;
    color: #220C10;
    padding: 0 10px 0 10px;
    background: hsla(177, 87%, 79%, 1);
    background: linear-gradient( 90deg, hsla(177, 87%, 79%, 1) 0%, hsla(235, 89%, 70%, 1) 100%);
    background: -moz-linear-gradient( 90deg, hsla(177, 87%, 79%, 1) 0%, hsla(235, 89%, 70%, 1) 100%);
    background: -webkit-linear-gradient( 90deg, hsla(177, 87%, 79%, 1) 0%, hsla(235, 89%, 70%, 1) 100%);
    filter: progid: DXImageTransform.Microsoft.gradient( startColorstr="#9BF8F4", endColorstr="#6F7BF7", GradientType=1);
}

.goal-planner-page .grid {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr 1fr 1fr;
    border-style: solid;
    margin: 50px;
    background-color: white;
    padding: 0 15px 0 15px;
}

.goal-planner-page .grid2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    border-bottom: solid black 5px;
}

.goal-planner-page .grid3 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
}

.goal-planner-page .grid4 {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr;
    text-align: center;
    background-color: #75B8C8;
    margin: 10px;
}

.goal-planner-page .item {
    padding-left: 20px;
}

.goal-planner-page .item1 {
    font-size: 50px;
    text-transform: uppercase;
    letter-spacing: 5px;
    padding-left: 30px;
}

.goal-planner-page .item2 {
    background-color: #77CBB9;
    border-top: solid black 5px;
    margin-bottom: 10px;
}

.goal-planner-page .item3 {
    background-color: #CDD3D5;
    margin-bottom: 10px;
}

.goal-planner-page .help {
    font-family: Caveat, cursive;
    font-size: 20px;
}

span {
    letter-spacing: 2px;
    font-size: 25px;
    text-transform: uppercase;
    font-weight: bold;
}

.goal-planner-page .date {
    border: none;
    font-size: 15px;
    background-color: #75B8C8;
}

.goal-planner-page .text {
    top: 65px;
    left: 55px;
    bottom: 10px;
    right: 10px;
    line-height: 25px;
    overflow: hidden;
    outline: none;
    font-size: 18px;
}
  .style-chatroom {
    background-color: transparent;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  }


  .title {
    overflow: hidden;
    text-align: center;
  }

  .title h1 {
    position: relative;
    display: inline-block;
    letter-spacing: 4px;
    padding: 15px;
    color: white;
    text-align: center;
  }

  .title h1:before,
  .title h1:after {
    content: '';
    position: absolute;
    top: 50%;
    border-bottom: 2px solid;
    width: 100vw;
    margin: 0 20px;
  }

  .title h1:before {
    right: 100%;
  }

  .title h1:after {
    left: 100%;
  }



  .input-area {
    margin-top: 10px;
    display: none;
    align-items: center;
  }

 

  .style-chatroom .text-area {
    margin-top: 10px;
    overflow-wrap: break-word;
    overflow-y: auto;
    max-height: 600px;
    background-color: white;
    display: none;
    padding: 15px;
    border-radius: 8px;
    border: 2px solid #77CBB9;

  }



  textarea {
    width: 70%;
    padding: 10px;
  }

   #text-area {
    border-radius: 8px;
    border: 2px solid #77CBB9;
    padding: 15px;
    width: 70% auto;
    height: 120px;
  }


  #chat-button {
    width: 30%;
    height: 100%;
    margin-left: 20px;
    padding: 5px 15px 5px 15px;
    border-radius: 8px;
    border: none;
    background-color: #77CBB9;
    color: white;
    font-weight: bold;
    letter-spacing: 3px;

  }
</style>

<div class="style-chatroom">
  <div class="title">
    <h1>
      Public Chat 
    </h1>
  </div>
  {{#if username}}
  <div id="loading-text-area">...Loading Chatroom</div>
  <div class="text-area"></div>
  <form class="input-area" onsubmit="onSubmitForm(); return false;">
    <div class="input name" id="user-name" style="display: none;">{{username}}</div>
    <textarea class="input content" id="text-area" placeholder="Message.."></textarea>
    <input type="submit" class="input button" id='chat-button' value="Send" />
  </form>
  {{/if}}
</div>


<script type='text/javascript' src='https://cdn.scaledrone.com/scaledrone.min.js'></script>
<script type='text/javascript' src="/assets/js/chatroom.js"></script>
